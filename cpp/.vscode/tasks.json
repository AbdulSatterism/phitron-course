{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "dependsOn": ["Build & Run C++"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
